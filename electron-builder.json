{
    "appId": "com.sugarsnooper.downloader",
    "productName": "Sugarsnooper Downloader",
    "copyright": "MIT",
    "directories": {
        "app": ".",
        "output": "out"
    },
    "files": [
        "package.json",
        "src/**/*",
        "node_modules",
        "index.js"
    ],
    "dmg": {
        "background": null,
        "backgroundColor": "#ffffff",
        "window": {
            "width": "400",
            "height": "300"
        },
        "contents": [{
                "x": 100,
                "y": 100
            },
            {
                "x": 300,
                "y": 100,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "mac": {
        "target": "dmg",
        "category": "public.app-category.utilities"
    },
    "win": {
        "target": "nsis"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    }
}